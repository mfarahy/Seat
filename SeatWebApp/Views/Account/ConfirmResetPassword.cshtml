@model SeatWebApp.Models.ResetPasswordModel
@{
    ViewBag.Title = "تغییر رمز ورود";
    Layout = "~/Views/Shared/_SecondaryWebsiteLayout.cshtml";
}
@section Scripts
{
    <script src="/assets/js/validation/jquery.validate.js"></script>
    <script src="/assets/js/jqform/jquery.form.js"></script>
}


<div class="bg-white parallax">
    <div class="container pad-container" style="margin-top:10%">
        <div class="col-md-5 col-md-offset-3">
            @using (var form = Html.BeginForm("Confirm", "Account", FormMethod.Post, new { @id = "changepassword-form", @class = "form-horizontal validation" }))
            {
                <h1><i class="fa fa-user-circle"></i>تغییر رمز ورود</h1>
                <input type="hidden" value="@Model.Id" />
                <input type="email" value="@Model.Email" readonly="readonly" name="Email" />
                <input type="text" value="@Model.UserName" readonly="readonly" name="UserName" />
                <input type="password" value="@Model.Password" name="Password" />
                <input type="password" value="@Model.ConfirmPassword" name="ConfirmPassword" />
                <input type="button" class="btn-submit" value="تغییر رمز ورود" />
                <div class="clearfix"></div>
            }
        </div>
    </div>
</div>
