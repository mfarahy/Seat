@{
    ViewBag.Title = "ریست رمز ورود";
    Layout = "~/Views/Shared/_SecondaryWebsiteLayout.cshtml";
}
@section script{
    <script src="/assets/js/validation/jquery.validate.js"></script>
    <script src="/assets/js/jqform/jquery.form.js"></script>
}


<div class="bg-white parallax landing">
    <div class="container pad-container" style="margin-top:10%">
        <div class="col-md-5 col-md-offset-3">
            @using (var form = Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @id = "resetpassword-form", @class = "form-horizontal validation" }))
            {
                    <h1><i class="fa fa-user-circle"></i>بازیابی رمز ورود</h1>
                    <input type="email" name="Email" required placeholder="آدرس ایمیل" rel="tooltip" title="لطفا از صحت آدرس ایمیل خود مطمئن شوید زیرا در صورت فراموشی رمز، رمز جدید به آدرس ایمیل شما ارسال می شود." />
                     Html.RenderPartial("_Captcha-Clean", "signup");
                    <input type="button" class="btn-submit" value="بازیابی رمز ورود" />
                    <div class="clearfix"></div>
            }
        </div>
    </div>
</div>